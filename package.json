{
  "name": "atomic-human-theme",
  "version": "1.0.0",
  "description": "Custom Jekyll theme for The Atomic Human using Tailwind CSS",
  "scripts": {
    "build:css": "npx tailwindcss -i ./assets/css/tailwind.css -o ./assets/css/styles.css --minify",
    "watch:css": "npx tailwindcss -i ./assets/css/tailwind.css -o ./assets/css/styles.css --watch"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.12",
    "postcss": "^8.4.18",
    "tailwindcss": "^3.3.0"
  },
  "dependencies": {
    "@tailwindcss/typography": "^0.5.15"
  }
}
